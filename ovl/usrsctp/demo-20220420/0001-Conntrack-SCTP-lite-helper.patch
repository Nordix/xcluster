+static void delayed_init_timer_handler(struct timer_list *t)
+{
+	struct nf_sctp_net *sn = container_of(t, struct nf_sctp_net, delayed_init);
+	pr_debug("nf_ct_sctp: delay init timer expires(net=0x%p)\n", sn);
+	sn->discard_init = 1;
+}
