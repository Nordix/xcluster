#! /bin/sh
##
## apparmor_test --
##
##   Test script for apparmor executed in xcluster.
##
## Commands;
##

prg=$(basename $0)
dir=$(dirname $0); dir=$(readlink -f $dir)
me=$dir/$prg
tmp=/tmp/${prg}_$$
. /etc/profile

die() {
	echo "ERROR: $*" >&2
	rm -rf $tmp
	exit 1
}
help() {
	grep '^##' $0 | cut -c3-
	rm -rf $tmp
	exit 0
}
test -n "$1" || help
echo "$1" | grep -qi "^help\|-h" && help

log() {
	echo "$prg: $*" >&2
}
dbg() {
	test -n "$__verbose" && echo "$prg: $*" >&2
}

## Test-cases;

##   version - Log versions
cmd_tcase_version() {
	log_version
}
cmd_tcase_check_namespaces() {
	test_namespaces
}
cmd_tcase_check_nodes() {
	test_nodes
}
cmd_tcase_vip_routes() {
	tcase "Set VIP routes (ECMP)"
	vip_route
}

##   echo - Simple echo test
cmd_tcase_echo() {
	tcase "Very simple profile for /root/bin/echo"
	mkdir -p /root/bin
	cp /bin/busybox /root/bin/echo
	apparmor_parser /etc/apparmor.d/root/root.bin.echo-empty || tdie
	/root/bin/echo Hello 2> /dev/null && tdie "echo Hello worked when it should not"
	apparmor_parser -r /etc/apparmor.d/root/root.bin.echo || tdie
	/root/bin/echo Hello || tdie "echo Hello"
}


. /usr/lib/xctest
indent='  '

##
# Get the command
cmd=$1
shift
grep -q "^cmd_$cmd()" $0 || die "Invalid command [$cmd]"

while echo "$1" | grep -q '^--'; do
	if echo $1 | grep -q =; then
		o=$(echo "$1" | cut -d= -f1 | sed -e 's,-,_,g')
		v=$(echo "$1" | cut -d= -f2-)
		eval "$o=\"$v\""
	else
		o=$(echo "$1" | sed -e 's,-,_,g')
		eval "$o=yes"
	fi
	shift
done
unset o v
long_opts=`set | grep '^__' | cut -d= -f1`

# Execute command
trap "die Interrupted" INT TERM
cmd_$cmd "$@"
status=$?
rm -rf $tmp
exit $status
