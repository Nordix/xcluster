#! /bin/sh
cat /etc/spoofed-hosts >> /etc/hosts

for a in $(grep -v '^#' /etc/spoofed-hosts | cut -d' ' -f1 | sort | uniq); do
	ip ro replace $a via 192.168.0.250
done

grep -qE '^insecure_registries' /etc/crio/crio.conf && exit 0
sed -i '/\[crio.image\]/a\
insecure_registries = [\
 "%localreg%/16",\
 "192.168.0.0/24"\
]' /etc/crio/crio.conf
