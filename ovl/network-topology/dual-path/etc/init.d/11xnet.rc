#! /bin/sh
. /usr/lib/network-topology.sh

vm() {
	ifsetup eth1 1
	ifsetup eth2 4
	ip ro replace default via 192.168.1.201
	ip -6 ro replace default via $PREFIX:192.168.1.201
	ip ro replace 192.168.6.0/24 via 192.168.4.202
	ip -6 ro replace $PREFIX:192.168.6.0/120 via $PREFIX:192.168.4.202
}

router201() {
	fwsetup
	ifsetup eth1 1
	ifsetup eth2 3
	ip ro add default via 192.168.0.250
	ip ro add 192.168.2.0/24 via 192.168.3.203
	ip ro add $PREFIX:192.168.2.0/120 via $PREFIX:192.168.3.203
	iptables -t nat -A POSTROUTING -s 192.168.1.0/24 -o eth0 -j MASQUERADE
}

router203() {
	fwsetup
	ifsetup eth1 3
	ifsetup eth2 2
	ip ro add default via 192.168.0.250
	ip ro add 192.168.1.0/24 via 192.168.3.201
	ip ro add $PREFIX:192.168.1.0/120 via $PREFIX:192.168.3.201
	iptables -t nat -A POSTROUTING -s 192.168.2.0/24 -o eth0 -j MASQUERADE
}

router202() {
	fwsetup
	ifsetup eth1 4
	ifsetup eth2 5
	ip ro add 192.168.6.0/24 via 192.168.5.204
	ip ro add $PREFIX:192.168.6.0/120 via $PREFIX:192.168.5.204
	ip ro add default via 192.168.0.250
}

router204() {
	fwsetup
	ifsetup eth1 5
	ifsetup eth2 6
	ip ro add 192.168.4.0/24 via 192.168.5.202
	ip ro add $PREFIX:192.168.4.0/120 via $PREFIX:192.168.5.202
	ip ro add default via 192.168.0.250
}

tester() {
	ifsetup eth1 2
	ifsetup eth2 6
	ip ro replace default via 192.168.2.203
	ip -6 ro replace default via $PREFIX:192.168.2.203
	ip ro add 192.168.4.0/24 via 192.168.6.204
	ip ro add $PREFIX:192.168.4.0/120 via $PREFIX:192.168.6.204	
}


case $(hostname) in
	vm-0*)
		vm;;
	vm-201)
		router201;;
	vm-202)
		router202;;
	vm-203)
		router203;;
	vm-204)
		router204;;
	vm-22*)
		tester;;
esac
