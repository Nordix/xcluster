#! /bin/sh

export PATH="/bin:/sbin:/usr/bin:/usr/sbin"

die() {
	echo "$@"
	exit 1
}

hostname | grep -Eq 'vm-[0-9]+$' || die "Invalid hostname [$(hostname)]"
i=$(hostname | cut -d- -f2 | sed -re 's,^0+,,')
test $i -le 200 || exit 0

echo 'alias images="crictl --runtime-endpoint=unix:///var/run/crio/crio.sock images"' >> /etc/profile

echo "export KUBECONFIG=/etc/kubernetes/kubeconfig" >> /etc/profile
mkdir -p /var/lib/kubelet

ip link add name cbr0 type bridge
ip link set dev cbr0 up
rm -f /etc/cni/net.d/bridge.conf
sed -i -e "s,\.x\.,\.$i\.," /etc/cni/net.d/cni.conf

# Enable to trace cni communication
if false; then
	d=/opt/cni/bin
	for f in bridge host-local loopback; do
		mv $d/$f $d/$f.bin
		ln /bin/tee-pipe $d/$f
	done
fi

for x in $(seq 1 8); do
	test $x = $i && continue
	ip -6 ro add 1000::2:11.0.$x.0/120 via 1000::1:192.168.1.$x
done

